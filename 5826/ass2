Q1:
pokemon = read('Pokemon.csv')
Y = pokemon['total']
pokemon_exclude = exclude(pokemon,col=['#','name','total'])
pokemon_exclude

Q2:

#Type_1
a = tally(pokemon_exclude.type_1,minimum=3,method = 'count')
#Type_2
b = tally(pokemon_exclude.type_2,minimum=3,method = 'count')
#Legendary 
c = tally(pokemon_exclude.legendary,minimum=3,method = 'count')
#Generation
d = tally(pokemon_exclude.generation,minimum=3,method = 'count')
#help(tally)


Q3:

plot(x=pokemon_exclude.type_2,y = Y, colour = pokemon_exclude.type_1)


Q4:
#help(ternary)
t_defence =ternary(pokemon_exclude['defense'],'>60',1,0)
t_hp = ternary(pokemon_exclude['hp'],'>=60',-1,1)
t_speed = ternary(pokemon_exclude['speed'],'<=100',0,1)
#tally(t_defence)
#tally(t_hp)
#tally(t_speed)


Q5
#help(read_clean)
pokemon_clean = read_clean(pokemon_exclude)
pokemon_clean = exclude(pokemon_clean,col='legendary')
#pokemon_clean
#help(hcat)
combined_data = hcat(pokemon_clean,Y,a,b,c,d,t_defence,t_hp,t_speed)
combined_data


